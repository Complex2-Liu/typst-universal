# https://editorconfig.org
root = true

[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
trim_trailing_whitespace = true
max_line_length = 78

[COMMIT_EDITMSG]
max_line_length = 72

[*.md]
indent_size = 2

[*.toml]
indent_size = 2

[*.typ]
max_line_length = 100
indent_size = 2
